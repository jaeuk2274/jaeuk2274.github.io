급상여계산
main(errbuf            OUT NOCOPY VARCHAR2
,retcode           OUT NOCOPY NUMBER
,p_paycd           VARCHAR2 DEFAULT NULL -- 10 급여 30 경영성과금
,p_paydat          DATE DEFAULT NULL -- 지급일자
,p_paymth          VARCHAR2 DEFAULT NULL -- 귀속년월
,p_compycd         VARCHAR2 DEFAULT '1000' 
