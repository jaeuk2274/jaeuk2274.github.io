,p_tax_subrate     NUMBER DEFAULT 0)


write_log('급상여계산일시 : '||TO_CHAR(sysdate, 'RRRR-MM-DD HH24:MI:SS'));
write_log('');
write_log('계산조건 - 급상여구분 : '||IS_PAY_COMMON.PAYNM(p_paycd));

